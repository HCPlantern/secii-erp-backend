<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.UserDao">
    <select id="findByUsernameAndPassword" resultMap="User">
        select *
        from user
        where `name` = #{username}
          and password = #{password}
    </select>

    <select id="findByUsername" resultMap="User">
        select *
        from user
        where `name` = #{username}
    </select>

    <insert id="createUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user (password, `name`, `role`, `employee_id`)
        values (#{password}, #{name}, #{role}, #{employeeId})
    </insert>

    <select id="findUserNameByRole" resultType="java.lang.String">
        select user.name
        from user
        where `role` = #{role}
    </select>
    <select id="getAttendanceByEmployeeId" resultType="java.lang.Integer">
        select attendance
        from user
        where employee_id = #{employeeId}
    </select>

    <update id="signInByUserName" parameterType="java.lang.String">
        update user
        set attendance = attendance + 1
        where `name` = #{name};
    </update>

    <resultMap id="User" type="com.nju.edu.erp.model.po.User">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="password" property="password"></result>
        <result column="role" property="role"></result>
        <result column="attendance" property="attendance"></result>
        <result column="last_sign_in_time" property="lastSignInTime"></result>
    </resultMap>

</mapper>